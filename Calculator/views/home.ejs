<%- include('partials/header') %>
<a type="button" class="btn btn-outline-dark bmi" href="/bmicalculator">bmi Calculator</a>
<div class="card text-center">
  <div class="card-body">
  <h5 class="card-title">Calculator</h5>
  <form action="/" method="post">
    <input class="input" type="text" name="num1" placeholder="First Number">
    <input class="input" type="text" name="num2" placeholder="Second Number">
    <button class="btn btn-outline-danger" type="submit" name="submit">Calculate</button>
  </form>
  <%if(calculate === true){%>
    <p class="result"> The result of the calculation is: <%= sum %></p>
  <%}%>
</div>
<%- include('partials/footer') %>
